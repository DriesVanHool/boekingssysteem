@{
    ViewData["Title"] = "Login";
}


<div class="row">
    <div class="col d-flex justify-content-center">
        <div class="card">
            <div class="card-header">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="card-body">
                <form>
                    <div class="form-group formRow">
                        <label for="inputRnummer">R-nummer</label>
                        <input type="text" class="form-control" id="inputRnummer">
                    </div>
                    <div class="form-group formRow">
                        <label for="inputWachtwoord">Wachtwoord</label>
                        <input type="password" class="form-control" id="inputWachtwoord">
                    </div>
                    <div class="form-group formRow">
                        <button type="button" class="btn btn-primary">Bevestig</button>
                    </div>
                    <div class="form-group formRow">
                        <a asp-area="" asp-controller="Login" asp-action="Reset">Wachtwoord vergeten</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>