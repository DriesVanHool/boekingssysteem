@model Boekingssysteem.ViewModels.GebruikerOverviewViewModel;
@{
    ViewData["Title"] = "Docenten beheren";
}

<div class="row">
    <div class="col-md-6">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="col-md-3 formRow">
        <div class="input-group">
            <input class="form-control me-sm-2" type="search" placeholder="Zoek op naam">
            <button type="button" class="btn btn-primary input-group-append"><i class="fa fa-search"></i></button>
        </div>
    </div>
    <div class="col-md-3 formRow">
        <a type="button" class="btn btn-primary w-100" asp-controller="Admin" asp-action="ToevoegenDocent">Toevoegen</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.Gebruikers[0].Rnummer)</th>
                    <th scope="col">naam</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Gebruikers[0].Email)</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var docent in Model.Gebruikers)
                {
                    <tr>
                        <td>@docent.Rnummer</td>
                        <td>@docent.Voornaam @docent.Achternaam</td>
                        <td>@docent.Email</td>
                         <td>
                            <span>
                                <button type="button" class="btn btn-primary input-group-append" data-toggle="modal" data-target="#link"><i class="fa fa-link"></i></button>
                            </span>
                            <span>
                                <a asp-controller="Admin" asp-action="BewerkDocent" asp-route-id="@docent.Id" type="button" class="btn btn-primary input-group-append"><i class="fa fa-edit"></i></a>
                            </span>
                            <span>
                                <button type="button" class="btn btn-danger input-group-append" data-toggle="modal" data-target="#@docent.Rnummer"><i class="fa fa-trash"></i></button>
                            </span>
                         </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

@foreach (var docent in Model.Gebruikers)
{
    <!-- TO DO -->
    <!-- Modal delete docent -->
    <div class="modal fade" id="@docent.Rnummer" tabindex="-1" role="dialog" aria-labelledby="linkModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="beheerModalLabel">Verwijder docent</h5>
                </div>
                <div class="modal-body">
                    Ben je zeker dat je @docent.Voornaam @docent.Achternaam wil verwijderen?
                </div>
                <div class="modal-footer">
                    <form class="mt-5" asp-controller="Admin" asp-action="DeleteDocent" asp-route-id="@docent.Rnummer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <input  type="submit" class="btn btn-primary" value="Bevestig"/>
                    </form>
                </div>
            </div>
        </div>
    </div>
 }
              
<!-- Modal docent richting -->
<div class="modal fade" id="link" tabindex="-1" role="dialog" aria-labelledby="linkModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="beheerModalLabel">Docent -Richting</h5>
            </div>
            <div class="modal-body">
                <form>
                    <fieldset class="form-group">
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="check1">
                        <label class="form-check-label" for="check1">
                          Programmeren
                        </label>
                      </div>
                      <div class="form-check">
                         <input class="form-check-input" type="checkbox" value="" id="check2" checked="">
                         <label class="form-check-label" for="check2">
                          Netwerken
                        </label>
                      </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Bevestig</button>
            </div>
        </div>
    </div>
</div>