@{
    ViewData["Title"] = "Docenten beheren";
}

<div class="row">
    <div class="col-md-6">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="col-md-3 formRow">
        <div class="input-group">
            <input class="form-control me-sm-2" type="search" placeholder="Zoek op naam">
            <button type="button" class="btn btn-primary input-group-append"><i class="fa fa-search"></i></button>
        </div>
    </div>
    <div class="col-md-3 formRow">
        <button type="button" class="btn btn-primary w-100" data-toggle="modal" data-target="#beheer">Toevoegen</button>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">r-nummer</th>
                    <th scope="col">naam</th>
                    <th scope="col">email</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>r156586</td>
                    <td>Joeri Verlooy</td>
                    <td>joeri.verlooy@thomasmore.be</td>
                    <td>
                        <span>
                            <button type="button" class="btn btn-primary input-group-append" data-toggle="modal" data-target="#link"><i class="fa fa-link"></i></button>
                        </span>
                        <span>
                            <button type="button" class="btn btn-primary input-group-append" data-toggle="modal" data-target="#beheer"><i class="fa fa-edit"></i></button>
                        </span>
                        <span>
                            <button type="button" class="btn btn-danger input-group-append"><i class="fa fa-trash"></i></button>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>r975564</td>
                    <td>Wim Janssen</td>
                    <td>wim.janssen@thomasmore.be</td>
                    <td>
                        <span>
                            <button type="button" class="btn btn-primary input-group-append" data-toggle="modal" data-target="#link"><i class="fa fa-link"></i></button>
                        </span>
                        <span>
                            <button type="button" class="btn btn-primary input-group-append" data-toggle="modal" data-target="#beheer"><i class="fa fa-edit"></i></button>
                        </span>
                        <span>
                            <button type="button" class="btn btn-danger input-group-append"><i class="fa fa-trash"></i></button>
                        </span>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


<!-- Modal docent beheren -->
<div class="modal fade" id="beheer" tabindex="-1" role="dialog" aria-labelledby="beheerModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="beheerModalLabel">Beheer docent</h5>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row formRow">
                        <div class="form-group col-md-6">
                            <input type="email" class="form-control" id="inputRnummer" placeholder="R-nummer">
                        </div>
                        <div class="form-group col-md-6 align-bottom">
                            <button type="button" class="btn btn-outline-primary w-100">Richtingen</button>
                        </div>
                    </div>
                    <div class="row formRow">
                        <div class="form-group col-md-6">
                            <label for="inputVoornaam">Voornaam</label>
                            <input type="text" class="form-control" id="inputVoornaam">
                        </div>
                        <div class="form-group col-md-6" style="display: inline-block">
                            <label for="inputAchternaam">Achternaam</label>
                            <input type="text" class="form-control" id="inputAchternaam">
                        </div>
                    </div>
                    <div class="form-group formRow">
                        <label for="inputEmail">Email</label>
                        <input type="email" class="form-control" id="inputEmail" placeholder="rnummer@thomasmore.be">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Bevestig</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal docent richting -->
<div class="modal fade" id="link" tabindex="-1" role="dialog" aria-labelledby="linkModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="beheerModalLabel">Docent -Richting</h5>
            </div>
            <div class="modal-body">
                <form>
                    <fieldset class="form-group">
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="check1">
                        <label class="form-check-label" for="check1">
                          Programmeren
                        </label>
                      </div>
                      <div class="form-check">
                         <input class="form-check-input" type="checkbox" value="" id="check2" checked="">
                         <label class="form-check-label" for="check2">
                          Netwerken
                        </label>
                      </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Bevestig</button>
            </div>
        </div>
    </div>
</div>