@{
    ViewData["Title"] = "Richtingen beheren";
}

<div class="row">
    <div class="col-md-6">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="col-md-3 formRow">
    </div>
    <div class="col-md-3 formRow">
        <div class="input-group">
            <button type="button" class="btn btn-primary input-group-append" data-toggle="modal" data-target="#beheer">Toevoegen</button>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Richting</th>
                    <th scope="col">Beschrijving</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Programmeren</td>
                    <td>
                        <span>
                            <button type="button" class="btn btn-primary input-group-append" data-toggle="modal" data-target="#beheer"><i class="fa fa-edit"></i></button>
                        </span>
                        <span>
                            <button type="button" class="btn btn-danger input-group-append"><i class="fa fa-trash"></i></button>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Netwerken</td>
                    <td>
                        <span>
                            <button type="button" class="btn btn-primary input-group-append" data-toggle="modal" data-target="#beheer"><i class="fa fa-edit"></i></button>
                        </span>
                        <span>
                            <button type="button" class="btn btn-danger input-group-append"><i class="fa fa-trash"></i></button>
                        </span>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


<!-- Modal richting beheren -->
<div class="modal fade" id="beheer" tabindex="-1" role="dialog" aria-labelledby="beheerModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="beheerModalLabel">Richting docent</h5>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group formRow">
                        <label for="inputNaam">Naam</label>
                        <input type="text" class="form-control" id="inputNaam">
                    </div>
                    <div class="form-group formRow">
                        <label for="inputBeschrijving">Beschrijving</label>
                        <textarea class="form-control" id="inputBeschrijving" rows="3"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Bevestig</button>
            </div>
        </div>
    </div>
</div>