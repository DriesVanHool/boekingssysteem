@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
        <ul class="navbar-nav me-auto">
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Docenten">Docenten beheren</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="DocentenStatussen">Docenten statussen</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Richtingen">Richtingen beheren</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Docent" asp-action="Index">Status</a>
            </li>
        </ul>
        <ul class="d-flex navbar-nav flex-grow-">
            <li class="nav-item">
                <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link">Logout</button>
                </form>
            </li>
        </ul>
}
else
{
    <ul class="navbar-nav me-auto">
    </ul>
    <ul class="d-flex navbar-nav flex-grow-">
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    </ul>
}
